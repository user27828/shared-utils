{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "../dist/client"
  },
  "include": ["src/**/*", "index.ts", "wysiwyg.ts", "src/data/*.js"],
  "exclude": [
    "node_modules",
    "dist",
    "__tests__",
    "src/components/wysiwyg/TinyMceBundle.js*",
    "src/components/wysiwyg/TinyMceEditor.js*"
  ],
  "references": [{ "path": "../utils" }]
}
