{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "module": "es2020", // Changed from "commonjs" to "es2020"
    "declaration": true,
    "outDir": "./dist",
    // "rootDir": "./", 
    "rootDirs": [".", "./client", "./utils"], // rootDirs
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react-jsx", // process JSX
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["jest", "node"]
  },
  "include": [
    "index.js", // root index.js
    "client/**/*.js", // client JS files
    "client/**/*.jsx",
    "utils/src/**/*.ts",
    "utils/index.ts",
    "test-*.ts",
    "__tests__/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
